@model MCComputersApp.Model.Product
@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
@*//create using  Razor View: Go to controller method  >> add View >> select Razor View>>   *@
<h2 class="text-info">Create Product</h2>
<br />

@if (TempData["StatusMessage"] != null)
{
    <partial name="_StatusMessage" model="@TempData["StatusMessage"]" />
}
<form method="post">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-group row">
        <div class="col-12 col-sm-4 col-lg-2">
            <label asp-for="Name"></label>
        </div>
        <div class="col-12 col-sm-8 col-lg-6">
            <input asp-for="Name" class="form-control input-capitalize" />
        </div>
        <span asp-validation-for="Name" class="text-danger offset-5"></span>
    </div>
    <div class="form-group row">
        <div class="col-12 col-sm-4 col-lg-2">
            <label asp-for="Price"></label>&nbsp;<span>@MCComputersApp.Model.SystemConstant.CurrencyType</span>
        </div>
        <div class="col-12 col-sm-8 col-lg-6">
            <input asp-for="Price" asp-format="{0:#,###,###,##0.00}" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <partial name="_UpsertLGButtonPartial" model="Model.Id" />
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
